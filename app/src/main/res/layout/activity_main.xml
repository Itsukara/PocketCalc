<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taka.pocketcalc.MainActivity"
    android:padding="5pt">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false"
        android:rowCount="6"
        android:columnCount="5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:textSize="24sp"
            android:id="@+id/textViewDisplay"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:textAlignment="viewEnd"
            android:layout_gravity="end"
            android:background="#fcf5d4"
            android:layout_columnWeight="1.0"
            android:paddingStart="10pt"
            android:paddingEnd="10pt"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="←"
            android:textSize="24sp"
            android:id="@+id/buttonBS"
            android:layout_row="1"
            android:layout_column="0"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="24sp"
            android:id="@+id/buttonC"
            android:layout_row="1"
            android:layout_column="1"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AC"
            android:textSize="24sp"
            android:id="@+id/buttonAC"
            android:layout_row="1"
            android:layout_column="2"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="24sp"
            android:id="@+id/buttonAdd"
            android:layout_row="1"
            android:layout_column="3"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="24sp"
            android:id="@+id/button7"
            android:layout_row="2"
            android:layout_column="0"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="24sp"
            android:id="@+id/button8"
            android:layout_row="2"
            android:layout_column="1"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="24sp"
            android:id="@+id/button9"
            android:layout_row="2"
            android:layout_column="2"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="24sp"
            android:id="@+id/buttonSub"
            android:layout_row="2"
            android:layout_column="3"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="24sp"
            android:id="@+id/button4"
            android:layout_row="3"
            android:layout_column="0"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="24sp"
            android:id="@+id/button5"
            android:layout_row="3"
            android:layout_column="1"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="24sp"
            android:id="@+id/button6"
            android:layout_row="3"
            android:layout_column="2"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="24sp"
            android:id="@+id/buttonMul"
            android:layout_row="3"
            android:layout_column="3"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="24sp"
            android:id="@+id/button1"
            android:layout_row="4"
            android:layout_column="0"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="24sp"
            android:id="@+id/button2"
            android:layout_row="4"
            android:layout_column="1"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="24sp"
            android:id="@+id/button3"
            android:layout_row="4"
            android:layout_column="2"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="24sp"
            android:id="@+id/buttonDiv"
            android:layout_row="4"
            android:layout_column="3"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="24sp"
            android:id="@+id/button0"
            android:layout_row="5"
            android:layout_column="0"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="="
            android:textSize="24sp"
            android:id="@+id/buttonEq"
            android:layout_row="5"
            android:layout_column="1"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="±"
            android:textSize="24sp"
            android:id="@+id/buttonSgn"
            android:layout_row="5"
            android:layout_column="2"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="%"
            android:textSize="24sp"
            android:id="@+id/buttonMod"
            android:layout_row="5"
            android:layout_column="3"
            tools:ignore="HardcodedText" />

    </GridLayout>
</RelativeLayout>
